*
    box-sizing: border-box    
    margin 0
    padding 0

body
    overflow-x: hidden
    background: #fafafa
    color #333
    @media screen and (min-width: 767px)
        font-size 18px
    @media screen and (max-width: 767px)
        font-size 16px

h1
h2
    text-align: center

.opacity-0
    opacity 0
    &.opacity-1
        opacity 1
        transition: opacity .7s

.font-bold
    font-weight: bold

.main
    width 100%
    padding 20px 0

.container 
    max-width: 820px
    margin 0 auto
    padding 0 10px

.content
    margin-top 30px

.text
    display: inline
    padding-left 20px

.portrait
    float: right;
    margin: 0 0 20px 20px
    border-radius: 4px;
    @media screen and (min-width: 767px)
        width: 34%;
    @media screen and (max-width: 767px) and (min-width: 481px)
        width: 48%;
    @media screen and (max-width: 481px)
        width: 100%;


